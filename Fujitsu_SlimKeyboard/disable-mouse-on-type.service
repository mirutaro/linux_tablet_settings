[Unit][Unit]
Description=Disable mouse while typing on Wayland
# Ensures the service starts after graphical login
After=graphical.target

[Service]
Type=simple
# Specify the full path of the script to be executed
ExecStart=/usr/local/bin/disable-mouse-on-type.sh
# Retry if it fails for some reason
Restart=on-failure
RestartSec=3

[Install]
# Register the service to the graphical.target
WantedBy=graphical.target
